@model CompanyManagement.Data.Entities.Remind
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    #headrow, #tablerow, #footerrow {
        margin-top: 10px;
        width: 100%;
        border-radius: 0.25rem;
        margin-left: -15px;
    }

    .main-container {
        width: 100%;
        margin-top: 30px;
        margin-left: 30px;
        color: #565656;
        font-weight: 700;
    }

    h2 {
        font-weight: 600;
        font-size: 24px;
        margin-bottom: 20px
    }

    h3 {
        float: left;
        width: 100%;
        font-size: 16px;
        color: #0373c3;
        font-weight: 700;
        margin-top: 35px;
        margin-bottom: 20px;
        padding-bottom: 15px;
    }

    .item1_detail, #item1_title {
        border-bottom: 2px solid #f5f5f5;
        margin-top: 20px;
        margin-bottom: 10px;
    }

    #item1 {
        background-color: white;
        margin-top: -10px
    }

    .item1-desc {
        margin-left: 10px;
    }

    .item1_body {
        color: #888888;
        line-height: 24px;
        font-size: 16px;
    }

    #item1_hr {
    }

    .bakiyebtn, .bakiyebtn:hover {
        width: 300px;
        color: #00c5dc;
        background-color: white;
        margin: 10px 10px;
    }

    .bakiye_body {
        text-align: center;
    }

    .invoice-payment {
        float: right;
        font-size: 15px;
        font-weight: 700;
        color: white;
    }

    .invoice-a, .invoice-a:hover {
        text-decoration: none;
        outline: 0;
        color: white;
    }

    ul {
        list-style: none;
    }

    .task-div {
        margin-left: -30px;
        border-bottom: 2px solid #f5f5f5;
        padding: 10px 10px;
    }

    td {
        color: #888888;
        line-height: 24px;
        font-size: 14px;
    }

    th {
        font-size: 16px;
        color: #0373c3;
        font-weight: 700;
    }
</style>

<div class="main-container">

    <h2>Gelecek Hatırlatmalarınız & Notlar</h2>
    <div class="main-search">
        <div class="row" id="headrow">
            <div class="col-xl-8">
                <div class="m-portlet " id="item1">
                    <div class="row" style="text-align:center" id="item1_title">
                        <div class="col-md-6">
                            <div class="">
                                <h3 class="" style="margin-left:-70px">
                                    HATIRLATMA DETAYI
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <div class="m-widget16">
                            <div class="row">
                                <div class="col-md-6">

                                    <div class="item1_body">
                                        @Html.Raw(Model.Description)
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-4" style="margin-top:10px">

                <div class="m-portlet m--bg-danger m-portlet--bordered-semi m-portlet--skin-dark" style="">
                    <div class="m-portlet__head" style=" border-bottom: 2px solid #f5f5f5;">
                        <div class="row">
                            <div class="m-portlet__head-title col-md-9">
                                <h3 class="m-portlet__head-text">
                                    DETAYLAR
                                </h3>

                            </div>
                            <div class="col-md-3" style="text-align:center;margin-top:25px;font-size:20px;color:white">
                                <a href="@Url.Action("Delete", "Remind", new { id = Model.Id })" class="btn btn-sm btn-danger">
                                    <span class="fa fa-trash-o" style="font-weight:700;font-size:25px;"></span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">

                        <ul>
                            <li class="">
                                <div class="task-div" style="">
                                    <div class="task-title">@Model.CreateTime.ToString("dd-MMMM-yyyy")</div>
                                    <div class="task-state">@Model.UploadTime.Value.ToString("dd-MMMM-yyyy")</div>
                                    <div class="task-date">Ekleyen</div>
                                    <div class="task-date">Kalan Süre</div>
                                    <div class="task-date">Bildirim</div>
                                    <div class="task-date">Hatırlatma</div>
                                </div>
                            </li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


