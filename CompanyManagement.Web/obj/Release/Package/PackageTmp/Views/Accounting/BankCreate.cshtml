
@{
    ViewBag.Title = "BankCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-container">

    <h2>Hesap Ekle</h2>
    <div class="row" id="headrow">
        <div class="m-portlet" style="width:100%">
            <!--begin::Form-->
            <form class="m-form m-form--label-align-right">
                <div class="m-portlet__body">
                    <div class="m-form__section m-form__section--first">
                        <div class="m-form__heading">
                            <h3>
                               Hesap Bilgileri
                            </h3>
                            <div class="m-form__seperator m-form__seperator--dashed"></div>
                        </div>
                        <div class="form-group m-form__group row">
                            <label class="col-lg-2 col-form-label">
                                Hesap İsmi
                            </label>
                            <div class="col-lg-9">
                                <input type="text" class="form-control m-input m-input--solid" placeholder="" id="customerinput">
                            </div>
                        </div>
                        <div class="form-group m-form__group row">
                            <div class="col-md-4">
                                <div class="row">
                                    <label class="col-lg-4 col-form-label" style="float:right">
                                        <span>Hesap Tipi :</span>
                                    </label>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control m-input m-input--solid" placeholder="Kasa Hesabı" id="customerinput">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4" style="margin-left:-40px">
                                <div class="row">
                                    <label class="col-lg-4 col-form-label">
                                        <span>Açılış Tutarı</span>
                                    </label>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control m-input m-input--solid" placeholder="Açılış Tutarı" id="customerinput">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4" style="margin-left:-40px">
                                <div class="row">
                                    <label class="col-lg-4 col-form-label">
                                        <span>Döviz Kuru</span>
                                    </label>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control m-input m-input--solid" placeholder="DropDownList" id="customerinput">
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>

                <div class="m-portlet__foot m-portlet__foot--fit">
                    <div class="m-form__actions m-form__actions">
                        <div class="row">
                            <div class="col-lg-3"></div>
                            <div class="col-lg-6">
                                <button type="submit" class="btn btn-primary">
                                    KAYDET
                                </button>
                              
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <!--end::Form-->
        </div>

    </div>

</div>


