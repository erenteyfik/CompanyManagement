@model CompanyManagement.Data.Entities.InterViews
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #cpspan {
        font-size: 12px;
        float: right;
    }
</style>
<div class="main-container">

    <h2>Görüşme Ekle</h2>
    <div class="row" id="headrow">
        <div class="m-portlet" style="width:100%">
            <!--begin::Form-->
            @using (Html.BeginForm("Create", "InterViews", null, FormMethod.Post, new { @class = "m-form m-form--label-align-right" }))
            {
                 @Html.HiddenFor(model=>model.CustomerId)
                <div class="m-portlet__body">
                    <div class="m-form__section m-form__section--first" style="margin-left:-100px">
                        <div class="row" style="margin-left:100px">
                            <div class="col-md-6">
                                
                                <div class="form-group m-form__group row">
                                    <label class="col-lg-2 col-form-label" id="cpspan">
                                        KONU :
                                    </label>
                                    <div class="col-lg-9">
                                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control m-input m-input--solid", @id = "customerinput", @placeholder = "", @type = "text" })
                                    </div>
                                </div>
                                <div class="form-group m-form__group row">
                                    <label class="col-lg-2 col-form-label" id="cpspan">
                                        KİMLE :
                                    </label>
                                    <div class="col-lg-9">
                                        @Html.TextBoxFor(model => model.WithWho, new { @class = "form-control m-input m-input--solid", @id = "customerinput", @placeholder = "", @type = "text" })
                                    </div>
                                </div>
                                <div class="form-group m-form__group row">
                                    <label class="col-lg-2 col-form-label" id="cpspan">
                                        KİM :
                                    </label>
                                    <div class="col-lg-9">
                                        @Html.TextBoxFor(model => model.WhoUser, new { @class = "form-control m-input m-input--solid", @id = "customerinput", @placeholder = "DropDown", @type = "text" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group m-form__group row">
                                    <label class="col-lg-2 col-form-label" id="cpspan">
                                        GÖRÜŞME ŞEKLİ :
                                    </label>
                                    <div class="col-lg-9">
                                        @Html.TextBoxFor(model => model.InterViewType, new { @class = "form-control m-input m-input--solid", @id = "customerinput", @placeholder = "Dropdown", @type = "text" })
                                    </div>
                                </div>
                                <div class="form-group m-form__group row">
                                    <label class="col-lg-2 col-form-label" id="cpspan">
                                        SONUC :
                                    </label>
                                    <div class="col-lg-9">

                                        <div class="m-checkbox-inline" style="margin-top:5px">
                                            <label class="m-checkbox">
                                                @Html.CheckBoxFor(model => model.Result, new { @type = "checkbox" })
                                                (OLUMLU:true OLUMSUZ:false)
                                                <span></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="form-group m-form__group row">
                            <label class="col-lg-2 col-form-label">
                                NOT :
                            </label>
                            <div class="col-lg-9">
                                @Html.TextAreaFor(model => model.Description, new { @class = "summernote", @type = "text", @placeholder = "", @id = "m_summernote_1", @style = "margin-left:200px" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="m-portlet__foot m-portlet__foot--fit">
                    <div class="m-form__actions m-form__actions">
                        <div class="row" style="float:right;margin-right:10px">
                            <div class="col-lg-3"></div>
                            <div class="col-lg-6">
                                <button type="submit" class="btn btn-primary">
                                    KAYDET
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!--end::Form-->
        </div>

    </div>

</div>

