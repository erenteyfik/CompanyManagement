@model CompanyManagement.Data.Entities.InterViews
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #interviewhead {
        background-color: white;
        width: 1210px;
        padding: 2.2rem 2.2rem;
        margin-left: 42px
    }
</style>
<div class="container" style="margin:50px 50px;">
    <div class="row" style="width:100%;">
        <div class="" id="interviewhead" style="">
            <div class="row">
                <div class="col-md-6">
                    <div>
                        <label style="font-size:18px;font-weight:700;margin:10px 10px;">KONU : </label>
                        <span style="font-size:16px;font-weight:600;margin:10px 10px;">@Model.Title</span>
                    </div>
                    <div>
                        <label style="font-size:18px;font-weight:700;margin:10px 10px;border-bottom: 2px solid #000;">AÇIKLAMA </label>
                        <span style="font-size:16px;font-weight:600;margin:10px 10px;">@Html.Raw(Model.Description)</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div>
                        <label style="font-size:16px;font-weight:600;margin:10px 10px;">@Model.CreateTime.Value.ToString("dd-MM-yyyy")</label>
                    </div>
                    <div>
                        <label style="font-size:16px;font-weight:600;margin:10px 10px;">@Model.WhoUser ile @Model.WithWho görüştü</label>
                        <span style="font-size:16px;font-weight:600;margin:10px 10px;">@Model.Result</span>
                    </div>

                </div>
            </div>


        </div>


        <div class="m-grid__item m-grid__item--fluid m-wrapper col-md-12" style="">
            <!-- BEGIN: Subheader -->
            <div class="m-subheader ">
                <div class="d-flex align-items-center">
                    <div class="mr-auto">
                        <h3 class="m-subheader__title m-subheader__title--separator">
                            <span style="font-size:30px;font-weight:700;color:blue">@Model.Title</span> ile ilgili devam eden görüşmeler
                        </h3>
                    </div>
                </div>
            </div>
            <!-- END: Subheader -->
            <div class="m-content">

                <div class="m-portlet m-portlet--mobile">
                    <div class="m-portlet__body">
                        <!--begin: Search Form -->
                        <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                            <div class="row align-items-center">
                                <div class="col-xl-8 order-2 order-xl-1">

                                </div>
                                <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                                    <a href="/InterViews/InterViewsListCreate/@Model.Id" class="btn btn-primary m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill" style="margin-left:-70px">
                                        <span>
                                            @*<i class="la la-cart-plus"></i>*@
                                            <span>
                                                BU GÖRÜŞMEYE BAŞLIĞINA AİT YENİ GÖRÜŞME EKLE
                                            </span>
                                        </span>
                                    </a>
                                    <div class="m-separator m-separator--dashed d-xl-none"></div>
                                </div>
                            </div>
                        </div>
                        <!--end: Search Form -->
                        <!--begin: Datatable -->
                        <table class="m-datatable" id="html_table">
                            <thead>
                                <tr>
                                    <th>
                                        TARİH
                                    </th>
                                    <th>
                                        AÇIKLAMA
                                    </th>
                                    <th>
                                        GÖRÜŞÜLEN KİŞİ
                                    </th>
                                    <th>
                                        GÖRÜŞEN KİŞİ
                                    </th>
                                    <th>
                                        GÖRÜŞME ŞEKLİ
                                    </th>
                                    <th>
                                        SONUÇ
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var interviewList in Model.interviewLIST)
                                {
                                    <tr>
                                        <td>@interviewList.CreateTime.Value.ToString("dd-MM-yyyy")</td>
                                        <td> @Html.Raw(interviewList.Description)</td>
                                        <td> @interviewList.WithWho</td>
                                        <td> @interviewList.WhoUser</td>
                                        <td> @interviewList.InterViewType</td>
                                        <td> @interviewList.Result</td>
                                        <td>
                                            <a href="@Url.Action("Delete", "InterViews", new { id = interviewList.Id })" class="btn btn-sm btn-danger">
                                                <i class="fa fa-trash-o"></i>
                                            </a>

                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <!--end: Datatable -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>