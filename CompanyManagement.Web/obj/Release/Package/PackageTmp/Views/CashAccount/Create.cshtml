@model CompanyManagement.Data.Entities.CashAccount
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #customerinput {
        width: 92%;
    }

    #bankbody {
        display: none;
    }
</style>
<div class="main-container">

    <h2>Hesap Ekle</h2>
    <div class="row" id="headrow">
        <div class="m-portlet" style="width:100%">
            <!--begin::Form-->
            @using (Html.BeginForm("Create", "CashAccount", null, FormMethod.Post, new { @class = "m-form m-form--label-align-right" }))
            {

                <div class="m-portlet__body">
                    <div class="m-form__section m-form__section--first">
                        <div class="m-form__heading">
                            <h3>
                                Hesap Bilgileri
                            </h3>
                            <div class="m-form__seperator m-form__seperator--dashed"></div>
                        </div>
                        <div class="form-group m-form__group row">
                            <div class="col-md-12">
                                <div class="row">
                                    <label class="col-lg-2 col-form-label" id="cpspan" style="">
                                        <span style="margin-left:40px">  Hesap İsmi :</span>
                                    </label>
                                    <div class="col-lg-10">
                                        @Html.TextBoxFor(model => model.AccountName, new {@style="margin-left:-20px", @required = true, @class = "form-control m-input m-input--solid", @type = "text", @placeholder = "Hesap İsmi", @id = "customerinput" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group m-form__group row" style="margin-left:30px">
                            <div class="col-md-4">
                                <div class="row">
                                    <label class="col-lg-4 col-form-label" id="cpspan">
                                        <span>Hesap Tipi :</span>
                                    </label>
                                    <div class="col-lg-8">
                                        @Html.EnumDropDownListFor(model => model.AccountType, new { @class = "form-control m-input m-input--solid accounttype", @id = "customerinput", @style = "" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4" style="margin-left:-40px">
                                <div class="row">
                                    <label class="col-lg-6 col-form-label" id="cpspan">
                                        <span style="margin-left:60px;">Açılış Tutarı:</span>
                                    </label>
                                    <div class="col-lg-6">
                                        @Html.TextBoxFor(model => model.OpeningAmount, new { @required = true, @class = "form-control m-input m-input--solid", @type = "number", @placeholder = "Açılış Tutarı", @id = "customerinput" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4" style="margin-left:-40px">
                                <div class="row">
                                    <label class="col-lg-6 col-form-label" id="cpspan">
                                        <span style="margin-left:60px">Döviz Kuru :</span>
                                    </label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control m-input m-input--solid" placeholder="DropDownList" id="customerinput">
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>



                <div class="m-portlet__body" id="bankbody">
                    <div class="m-form__section m-form__section--first">
                        <div class="m-form__heading">
                            <h3>
                                Banka Bilgileri
                            </h3>
                            <div class="m-form__seperator m-form__seperator--dashed"></div>
                        </div>
                        <div class="form-group m-form__group row">
                            <div class="col-md-6">
                                <div class="row" style="margin:15px 15px">
                                    <label class="col-lg-3 col-form-label">
                                        Banka İsmi :
                                    </label>
                                    <div class="col-lg-9 form-control m-input m-input--solid">
                                        @Html.TextBoxFor(model => model.BankName, new { @class = "form-control m-input m-input--solid", @type = "text", @placeholder = "", @id = "customerinput" })
                                    </div>
                                </div>

                                <div class="row" style="margin:15px 15px">
                                    <label class="col-lg-3 col-form-label">
                                        Şube Kodu :
                                    </label>
                                    <div class="col-lg-9 form-control m-input m-input--solid">
                                        @Html.TextBoxFor(model => model.BranchCode, new { @class = "form-control m-input m-input--solid", @type = "text", @placeholder = "", @id = "customerinput" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="row" style="margin:15px 15px">
                                    <label class="col-lg-3 col-form-label">
                                        Hesap Numarası :
                                    </label>
                                    <div class="col-lg-9 form-control m-input m-input--solid">
                                        @Html.TextBoxFor(model => model.BankAccountNo, new { @class = "form-control m-input m-input--solid", @type = "text", @placeholder = "", @id = "customerinput" })
                                    </div>
                                </div>

                                <div class="row" style="margin:15px 15px">
                                    <label class="col-lg-3 col-form-label">
                                        IBAN :
                                    </label>
                                    <div class="col-lg-9 form-control m-input m-input--solid">
                                        @Html.TextBoxFor(model => model.IBAN, new { @class = "form-control m-input m-input--solid", @type = "text", @placeholder = "", @id = "customerinput" })
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="m-portlet__foot m-portlet__foot--fit">
                    <div class="m-form__actions m-form__actions">
                        <div class="row">
                            <div class="col-lg-3"></div>
                            <div class="col-lg-6">
                                <button type="submit" class="btn btn-primary">
                                    KAYDET
                                </button>

                            </div>
                        </div>
                    </div>
                </div>
            }
            <!--end::Form-->
        </div>

    </div>

</div>
<script src="~/Scripts/jquery-3.0.0.min.js"></script>

<script>

    $(document).ready(function () {
        $('.accounttype').on('change', function () {
            var accounttype = $('.accounttype').val();
            if (accounttype == 1) {
                console.log(accounttype);
                $("#bankbody").show();
            } else {
                $("#bankbody").hide();
            }
        })
    });
</script>