@model CompanyManagement.Data.Model.Register
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<hr />

@Html.ValidationSummary()

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Ad</label>
        @Html.TextBoxFor(t => t.UserName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Firma Adı</label>
        @Html.TextBoxFor(t => t.CompanyName, new { @class = "form-control" })
    </div>


    <div class="form-group">
        <label>Şifre</label>
        @Html.PasswordFor(t => t.Password, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
}
